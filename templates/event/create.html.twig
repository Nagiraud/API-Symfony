{% extends "base.html.twig" %}

{% block body %}
    <h1>Ajoutez un événement</h1>
    {{ form_start(form) }}
    {{ form_row(form.name,{
        label:'Nom'
    }) }}
    {{ form_row(form.date,{
        label:'Date'
    }) }}
    {{ form_row(form.artist,{
