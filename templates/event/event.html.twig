{% extends "base.html.twig" %}

{% block body %}
    <h1>Liste des événements</h1>

    <ul>
        {% for event in events %}
            <li>
                <strong>ID :</strong> {{ event.id }}<br>
                <strong>Nom :</strong> {{ event.name }}<br>
                <strong>Date :</strong> {{ event.date }}<br>
                <strong>Artiste :</strong> {{ event.artist }}<br>
            </li>
            <hr>
        {% endfor %}
    </ul>
{% endblock %}
