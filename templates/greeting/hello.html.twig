{% extends 'base.html.twig' %}

{% block title %}Hello {{ name }}{% endblock %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="/logout">logout</a>
    {% else %}
        <a href="/login">login</a>
        <a href="/register">register</a>
    {% endif %}

    <h1>Hello {{ name }}</h1>
    <p>Liste d'évenemnt enregisté :</p>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
         {% for event in events %}
              <ul>
                  <a href="{{ path('app_show_event', {id:event.id}) }}">{{ event.name }}</a>
              </ul>
         {% else %}
             <li>Pas d'événement enregisté.</li>

         {% endfor %}

    {% endif %}




{% endblock %}